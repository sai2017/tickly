<div class="users-page-inner">
  <div class="box-wrap">
    <div class="search-box">
      <div class="search-header">
        <h4>検索条件</h4>
        <%= search_form_for @q do |f| %>
          <div class="keyword-search">
            <%= f.label :name, "Keyword" %>
            <%= f.search_field :name_cont %>
          </div>
          <div class="age-search">
            <%= f.label :age %>
            <%= f.number_field :age_gteq %>以上〜
            <%= f.number_field :age_lt %>未満
          </div>
          <div class="prefecture-search">
            <%= f.label :prefecture_id, "居住地" %>
            <%= f.collection_select :prefecture_id_eq, Prefecture.all, :id, :name, include_blank: '指定なし' %>
          </div>
          <%= f.submit "検索" %>
        <% end %>
      </div>
    </div>
    <div class="user-list-box">
      <% @users.each do |user| %>
        <% if user != current_user %>
          <% unless current_user.following?(user) %>
            <%= link_to user_path(user.id) do %>
              <div class="user-card">
                <div class='user-card-img'>
                  <% if user.img_name? %>
                    <%= image_tag user.img_name.url(:thumb) %>
                  <% else %>
                    <%= image_tag 'default-person-icon.jpeg' %>
                  <% end %>
                </div>
                <%= user.name %>
              </div>
            <% end %>
          <% end%>
        <% end%>
      <% end %>
    </div>
  </div>
</div>